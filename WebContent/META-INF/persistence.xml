<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
  version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">
  <persistence-unit name="tutorialJPA" transaction-type="RESOURCE_LOCAL">  
  <class>modelo.Familia</class>
  <class>modelo.Persona</class>
  <class>modelo.Empleo</class>
    <properties>
      <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver" />
      <property name="javax.persistence.jdbc.url"
        value="jdbc:derby:DB/db;create=true" />
      <property name="javax.persistence.jdbc.user" value="test" />
      <property name="javax.persistence.jdbc.password" value="test" />
 
      <!-- EclipseLink debe crear este esquema de base de datos automaticamente -->
      <property name="eclipselink.ddl-generation" value="drop-create-tables" />
      <property name="eclipselink.ddl-generation.output-mode"
        value="both" />
    </properties>
 
  </persistence-unit>
</persistence>